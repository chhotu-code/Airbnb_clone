<%- layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <form
      action="/listings/<%= data._id %>?_method=PATCH"
      method="post"
      novalidate
      class="needs-validation"
    >
      <h3 class="mt-2">Edit your Listing</h3>
      <div class="mb-3 mt-3">
        <label for="title" class="form-label"> Title</label>
        <input
          type="text"
          name="listing[title]"
          value="<%= data.title %>"
          class="form-control"
          required
        />
        <div class="valid-feedback">It looks like good!</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label"> Description</label>
        <textarea name="listing[description]" class="form-control" required>
 
                <%= data.description %>
            </textarea>
        <div class="invalid-feedback">Please put the Description.</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label"> Image</label>
        <input
          type="text"
          name="listing[image]"
          value="<%= data.image %>"
          class="form-control"
          required
        />

        <div class="invalid-feedback">Please put the valid price.</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label"> Price</label>
          <input
          
            name="listing[price]"
            value="<%= data.price %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please put the valid location.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="location" class="form-label"> Location</label>
          <input
            type="text"
            name="listing[location]"
            value="<%= data.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please put the valid Country.</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="country" class="form-label"> Country</label>
        <input
          type="text"
          name="listing[country]"
          value="<%= data.country %>"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Please put the valid Country.</div>
      </div>
      <button class="btn btn-dark mt-3 mb-3">ADD</button>
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
